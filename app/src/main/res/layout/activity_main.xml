<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/mainMonday"
            layout="@layout/view_day" />

        <include
            android:id="@+id/mainTuesday"
            layout="@layout/view_day"

            />

        <include
            android:id="@+id/mainWednesday"
            layout="@layout/view_day" />

        <include
            android:id="@+id/mainThursday"
            layout="@layout/view_day" />

        <include
            android:id="@+id/mainFriday"
            layout="@layout/view_day" />

        <include
            android:id="@+id/mainSaturday"
            layout="@layout/view_day" />

        <include
            android:id="@+id/mainSunday"
            layout="@layout/view_day" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.core.widget.NestedScrollView>